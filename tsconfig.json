{
  "compilerOptions": {
    "outDir": "./public/scripts/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es5",
    "allowJs": false,
    "declaration": true,
    "importsNotUsedAsValues": "preserve"
  },
  "include": [
    "**/*"
  ],
  "exclude": [
    "node_modules/**/*",
    "public",
    "**/__tests__/*"
  ]
}